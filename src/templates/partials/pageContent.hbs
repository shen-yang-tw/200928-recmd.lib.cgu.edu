<!-- page main content -->
<section class="relative" uk-height-viewport="expand: true">
  <!-- <div class="bg_primary opacity10 uk-position-cover"></div> -->
  <div class="container_responsive@s uk-container">
    {{!-- <div class="uk-clearfix">
      {{>breadcrumb}}
      {{#if userOn}}
      <small class="uk-float-right">帳號：{{user}}<a class="ml-2 color_primary-text!" href="{{linkLogout}}">登出</a></small>
      {{/if}}
    </div> --}}

    <!-- Breadcrumb & User -->
    <div class="px-2 mb-2 justify-between uk-grid uk-grid-small uk-grid-match uk-flex-middle" uk-grid uk-height-match="target: > div">
      <!-- Child <div> Default to class="uk-width-auto" -->
      <div class="m-0">
        {{>breadcrumb}}
      </div>
      {{#if userOn}}
      <div class="text-xs m:text-sm content-center m-0">
        <span class="mr-2 uk-width-auto">帳號：{{user}}</span>
        <a class="color_primary-text! uk-width-auto" href="{{linkLogout}}">登出</a>
      </div>
      {{/if}}
    </div>
    <!-- Breadcrumb & User -->

    {{!-- <div class="s:mb-2 uk-card uk-card-small uk-card-default uk-card-body" uk-height-viewport="min-height: 200"> --}}
    <div class="min_height-550 s:mb-2 uk-card uk-card-small uk-card-default uk-card-body">
      <h2 class="btm_line text-2xl mt-0">
        {{pageTitle}}
        {{#if linkBackOn}}
        <small class="mt-2 uk-float-right"><a class="no-underline" href="{{linkBack}}"><i
              class="mr-1 fas fa-angle-left"></i>{{backWhere}}</a></small>
        {{/if}}
        {{#if h2button}}
        <a class="btn_primary mt-2 uk-float-right uk-button uk-button-small uk-button-primary" href="#search" uk-toggle>{{!-- <i class="mr-2 fas fa-search"></i> --}}{{h2buttonName}}</a>
        {{/if}}
      </h2>
      {{#if form}}
      <div id="content">
        <form onsubmit="return false;">
          {{> (lookup . 'content') }}
          {{!-- <!-- Look up partial:content='' --> --}}
        </form>
      </div>
      {{else}}
      <div id="content">
        {{> (lookup . 'content') }}
        {{!-- <!-- Look up partial:content='' --> --}}
      </div>
      {{/if}}
      <!-- End #content -->
    </div>
    <!-- End uk-card -->
  </div>
</section>
<!-- page main content -->