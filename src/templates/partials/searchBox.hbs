<!-- searchBox -->
<form onsubmit="return false;">
	<div class="uk-grid uk-grid-small uk-child-width-expand" uk-grid>
		<div class="min_width-full min_width-1/6!@m min_width-1/3!@l">
			<div class="uk-flex">
				<div class="flex-auto"><input class="uk-input" type="text" placeholder="請輸入關鍵字"></div>
				{{!-- <!-- <div class="flex-auto"><a class="btn_secondary min_width-100! w-full uk-button uk-button-primary" href="#search" uk-toggle>病症瀏覽</a></div> --> --}}
			</div>
		</div>
		{{#if select1}}
		<div class="min_width-1/2! min_width-auto!@m">
			<select class="uk-select">
				<option value="0" selected>-不限欄位-</option>
				<option value="AppID">推薦單號</option>
				<option value="Title">題名</option>
				<option value="Author">作者</option>
				<option value="Publisher">出版者</option>
				<option value="ClassNo">分類號</option>
				<option value="ISBN">ISBN</option>
				<option value="ISSN">ISSN</option>
			</select>
		</div>
		{{/if}}
		{{#if select2}}
		<div class="min_width-1/2! min_width-auto!@m">
			<select class="uk-select">
				<option value="0" selected>-推薦日期-</option>
				<option value="7">最近一週</option>
				<option value="14">最近兩週</option>
				<option value="31">最近一月</option>
				<option value="90">最近三月</option>
				<option value="180">最近半年</option>
			</select>
		</div>
		{{/if}}
		{{#if select3}}
		<div class="min_width-1/2! min_width-auto!@m">
			<select class="uk-select">
				<option value="0" selected>-資料類型-</option>
				<option value="21">圖書資料</option>
				<option value="22">期刊雜誌</option>
				<option value="23">視聽資料</option>
				<option value="24">資料庫</option>
			</select>
		</div>
		{{/if}}
		{{#if select4}}
		<div class="min_width-1/2! min_width-auto!@m">
			<select class="uk-select">
				<option value="0" selected>-處理狀態-</option>
				<option value="10">書目資料待審核</option>
				<option value="15">書目資料審核中</option>
				<option value="30">書目資料已確認</option>
				<option value="1">不予採購</option>
				<option value="20">與推薦者確認資料</option>
				<option value="25">書目資料待審核(已補正)</option>
				<option value="40">採購審查中</option>
				<option value="45">決定採購</option>
				<option value="60">圖書館採購中</option>
				<option value="96">圖書館採購中(售缺／待出版)</option>
				<option value="65">無法購得</option>
				<option value="80">收料點收中</option>
				<option value="9">書到館</option>
				<option value="5">隱藏本書資訊</option>
				<option value="55">書目資料不全</option>
				<option value="95">已收料並付款</option>
			</select>
		</div>
		{{/if}}
		{{#if select5}}
		<div class="min_width-1/2! min_width-auto!@m">
			<select class="uk-select">
				<option value="0" selected>-出版語文-</option>
				<option value="41">正體中文</option>
				<option value="42">簡體中文</option>
				<option value="43">英文</option>
				<option value="44">日文</option>
				<option value="45">韓文</option>
				<option value="46">其他</option>
			</select>
		</div>
		{{/if}}
		<div class="min_width-full! min_width-auto!@m">
			<button class="btn_primary w-full uk-button uk-button-primary"><i class="mr-2 fas fa-search"></i>搜尋</button>
		</div>
	</div>
</form>
<!-- searchBox -->